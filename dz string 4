#include <cctype>
#include <iostream>
#include <cstring>

using namespace std;

int main()
{
    char recenica[] = "POGLEDAJ VIDEO: STARICA IZ BOSNE KOJA LIZE LJUDIMA OCI POSTALA SVJETSKI HIT Â´Nazalost, ntko me nece nasljediti, mojoj djeci se to gadi...`";
    int simbola=0;
	int slova=0;
	int rijeci=0;
	int recenice=0;
	int malaslova=0;
	int velikaslova=0;
	int brojevi=0;
    

    for (int i=0; i<=strlen(recenica); i++)
    {
        if (isalpha(recenica[i]))
        {
            slova ++;
    	}
    	if (isprint(recenica[i]))
        {
            simbola ++;
    	}
    	  	if (isspace(recenica[i]))
        {
            rijeci ++;
    	}
    	  	if (ispunct(recenica[i]))
        {
            recenice ++;
    	}
    	  	if (islower(recenica[i]))
        {
            malaslova ++;
    	}
    	  	if (isupper(recenica[i]))
        {
            velikaslova ++;
    	}
    	  	if (isdigit(recenica[i]))
        {
            brojevi ++;
    	}
    	toupper(recenica[i]);
    	recenica[i]= toupper(recenica[i]);
    	cout<<recenica[i];
    	
    }
    


    cout << "broj :" <<simbola<< endl;
    cout << "broj :" <<slova<< endl;
    cout << "broj :" <<rijeci+1<< endl;
    cout << "broj :" <<recenice+1<< endl;
    cout << "broj :" <<malaslova<< endl;
    cout << "broj :" <<velikaslova<< endl;
    cout << "broj :" <<brojevi<< endl;
    cout << recenica;
